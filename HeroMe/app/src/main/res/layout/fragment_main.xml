<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.germanpereyra.herome.Fragments.MainFragment"
    android:background="@drawable/hero_bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/heroes"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="CAME BY ACCIDENT"
            android:id="@+id/accidentButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#fac740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/lightning"
            android:drawableRight="@drawable/item_selected"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="GENERIC MUTATION"
            android:id="@+id/mutationButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#fac740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/atomic"
            android:drawableRight="@drawable/item_selected"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="BORN WITH THEM"
            android:id="@+id/bprnButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#fac740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/rocket"
            android:drawableRight="@drawable/item_selected"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="CHOOSE POWERS"
            android:id="@+id/chooseButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_solid_button"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:backgroundTint="#fac740"
            android:textColor="#121921"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
