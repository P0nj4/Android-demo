<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.germanpereyra.recipies.ui.fragments.HorizontalRecipiesListFragment">

    <TextView
        android:id="@+id/fragment_horizontal_recipies_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:text="TRENDING"
        android:textAppearance="@style/TextAppearance.BreeSerif"
        android:textColor="#161616"
        android:textSize="34sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalRecipesListRecicleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
