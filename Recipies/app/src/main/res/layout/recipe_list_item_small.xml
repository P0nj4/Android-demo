<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recipe_list_item_small_image"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_rounded_corners"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/macaroni"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recipe_list_item_small_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Fresca"
        android:textColor="#161616"
        tools:text="Cannabis Coconut Oil" />

</LinearLayout>